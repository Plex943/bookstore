<div class="home-header">
    {{#if search}}
        <h1>Veja os resultados de <span>{{search}}</span> </h1>
    {{else}}
        <h1>Veja alguns <span>Livros</span>:</h1>
    {{/if}}
    <form action="/books/cart" method="get">
        <input type="text" name="search" placeholder="procure um Livro...">
        <input type="submit" class="btn" value="Buscar">
    </form>
    <div class="order-conteiner">
        
        <form action="/books/cart" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/books/cart" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/books/cart">Limpar</a>
    </div>
</div>

<div class="Userbooks">
    <div class="title-conteiner">
            <h2>Seu carrinho</h2>
    </div>
    <ul>
        {{#if empityBooks}}
            <p>você ainda não tem Livros <a href="/">add Aqui</a></p>
        {{else}}
            {{#each books}}
                <li>
                    <img src="{{this.img}}" alt="imagen de {{this.title}}" class="book-img">
                    <span class="label">{{this.title}}</span>
                    <a href="/books/details" class="btn">Detalhes</a>
                </li>
            {{/each}}
        {{/if}}
    </ul>
</div>