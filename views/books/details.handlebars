{{#with book}}
    <div class="add-form-conteiner">

        <div class="image-preview">
            <label>Imagem:</label>
            <img src="{{img}}" alt="Aqui aparecerá a imagem" id="img">
        </div>
        <form action="/books/edit">            
            <a href="/books/cart">Carrinho</a>
            <h1>Detalhes do Livro:</h1>
            <div class="details-control">
                <label for="title">Livro:</label>
                <input type="text" name="title" placeholder="Digite um Titulo" value="{{title}}">
            </div>
            <div class="details-control">
                <label for="autor">Autor:</label>
                <input type="text" name="autor" placeholder="Digite o nome do autor" value="{{autor}}">
            </div>
            <div class="details-control">
                <label for="year">Ano:</label>
                <input type="text" name="year" placeholder="Digite o ano de lançamento" value="{{year}}">
            </div>
            <div class="details-control">
                <label for="descripition">Descrição:</label>
                <textarea name="descripition" placeholder="Digite a descrição do livro">{{descripition}}</textarea>
            </div>
        </form>

        
    </div>

    <script>
        document.getElementById("imgurl").addEventListener("input", function(event) {
            const imgUrl = document.getElementById("imgurl").value
            const preview = document.getElementById("img")
            

            if(imgUrl) {
                preview.src = imgUrl
                preview.alt = "Imagem carregada"
            } else {
                preview.src = ""
                preview.alt = "A imagem aparecerá aqui"
            }
        })
    </script>
{{/with}}